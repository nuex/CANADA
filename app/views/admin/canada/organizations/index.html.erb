<%= render :partial => 'admin/shared/nav' %>

<h1>Listing organizations</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Link</th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%=h organization.title %></td>
    <td><%=h organization.description %></td>
    <td><%=h organization.link %></td>
    <td><%= link_to 'Show', [:admin, :canada, organization] %></td>
    <td><%= link_to 'Edit', edit_admin_canada_organization_path(organization) %></td>
    <td><%= link_to 'Destroy', [:admin, :canada, organization], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New organization', new_admin_canada_organization_path %>
