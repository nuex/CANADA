<%= render :partial => 'admin/shared/nav' %>

<h1>Editing hack</h1>

<% form_for([:admin, :canada, @hack]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [:admin, :canada, @hack] %> |
<%= link_to 'Back', admin_canada_hacks_path %>
