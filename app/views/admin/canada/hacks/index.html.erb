<%= render :partial => 'admin/shared/nav' %>

<h1>Listing hacks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @hacks.each do |hack| %>
  <tr>
    <td><%=h hack.title %></td>
    <td><%=h hack.description %></td>
    <td><%= link_to 'Show', [:admin, :canada, hack] %></td>
    <td><%= link_to 'Edit', edit_admin_canada_hack_path(hack) %></td>
    <td><%= link_to 'Destroy', [:admin, :canada, hack], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New hack', new_admin_canada_hack_path %>
