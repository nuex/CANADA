<%= render :partial => 'admin/shared/nav' %>

<h1>Editing resource</h1>

<% form_for([:admin, :canada, @resource]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', [:admin, :canada, @resource] %> |
<%= link_to 'Back', admin_canada_resources_path %>
