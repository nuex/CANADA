<%= render :partial => 'admin/shared/nav' %>

<h1>Listing locations</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Address</th>
    <th>Phone</th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%=h location.title %></td>
    <td><%=h location.address %></td>
    <td><%=h location.phone %></td>
    <td><%= link_to 'Show', [:admin, :canada, location] %></td>
    <td><%= link_to 'Edit', edit_admin_canada_location_path(location) %></td>
    <td><%= link_to 'Destroy', [:admin, :canada, location], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New location', new_admin_canada_location_path %>
